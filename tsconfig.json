{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    // "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    // "lib": [
    //   "es2018",
    //   "dom"
    // ]
    "target": "es5",
    "lib": ["dom", "es2015.promise", "es5", "es6", "es2017"]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
